		"sass": "^1.56.1",
		"stylelint": "^14.15.0"
	},
	"scripts": {
		"editorconfig": "editorconfig-cli",
		"stylelint": "stylelint \"source/sass/**/*.scss\"",
		"w3c": "gulp processMarkup validateMarkup --series --silent",
		"bemlint": "gulp processMarkup lintBem --series --silent",
		"lint": "npm run editorconfig && npm run stylelint && npm run w3c && npm run bemlint",
		"build": "gulp build",
		"start": "gulp runDev",
		"preview": "gulp build; gulp startServer"
	},
	"browserslist": [
		"last 2 versions",
		"not dead",
		"not op_mini all",
		"not < 0.2%"
	],
	"editorconfig-cli": [
		"*.json",
		"*.js",
		"source/**/*.html",
		"source/**/*.twig",
		"source/**/*.js",
		"source/**/*.svg",
		"source/sass/**/*.scss"
	],
	"engines": {
		"node": "16.x"
	},
	"type": "module",
	"pre-commit": "lint"
}
