		"gulp-sass": "^5.1.0",
		"gulp-stacksvg": "^1.0.6",
		"gulp-svgmin": "^4.1.0",
		"gulp-terser": "^2.1.0",
		"gulp-twig": "^1.2.0",
		"gulp-w3c-html-validator": "^5.1.4",
		"postcss": "^8.4.19",
		"postcss-csso": "^6.0.1",
		"postcss-scss": "^4.0.5",
		"postcss-url": "^10.1.3",
